{
  "compilerOptions": {
  "target": "ES2020",
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "moduleResolution": "Bundler",
    "useDefineForClassFields": true,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "paths": {
      "@utils/*": ["./src/utils/*"],
      "@scenes/*": ["./src/scenes/*"],
      "@config/*": ["./src/config/*"],
      "@managers/*": ["./src/managers/*"],
      "@systems/*": ["./src/systems/*"]
    },
    "types": ["phaser","vite/client"]
  },
  "include": ["src"]
}
